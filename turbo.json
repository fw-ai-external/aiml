{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*", "dist/**", ".next/**", ".source/**"]
    },
    "@aiml/shared#build": {
      "outputs": ["dist/**"]
    },
    "@aiml/runtime#build": {
      "dependsOn": ["^@aiml/shared#build", "^@aiml/parser#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/parser#build": {
      "dependsOn": ["^@aiml/shared#build", "^unified-aiml#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/unified-aiml#build": {
      "dependsOn": [
        "^micromark-extension-aiml-jsx#build",
        "^mdast-util-aiml#build",
        "^mdast-util-aiml-jsx#build",
        "^unified-aiml#build",
        "^micromark-extension-aimljs#build"
      ],
      "outputs": ["dist/**"]
    },
    "mdast-util-aiml-jsx#build": {
      "dependsOn": ["^micromark-extension-aiml-jsx#build"],
      "outputs": ["dist/**"]
    },
    "micromark-extension-aimljs#build": {
      "dependsOn": ["^micromark-extension-aiml-jsx#build"],
      "outputs": ["dist/**"]
    },

    "landing-page#dev": {
      "outputs": [".source/**", ".next/**"]
    },
    "aiml-ui#dev": {
      "outputs": [".next/**"]
    },
    "aiml-ui#build": {
      "dependsOn": [
        "^unified-aiml#build",
        "^micromark-extension-aiml-jsx#build",
        "^micromark-extension-aimljs#build",
        "^mdast-util-aiml#build",
        "^mdast-util-aiml-jsx#build"
      ],
      "outputs": [".next/**"]
    },
    "@aiml/language-server#typecheck": {
      "dependsOn": ["^@aiml/parser#build", "^@aiml/shared#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/aiml-ui#typecheck": {
      "dependsOn": ["^@aiml/parser#build", "^@aiml/shared#build", "^@aiml/runtime#build"],
      "outputs": ["dist/**"]
    },
    "fireagent-plugin-vscode#typecheck": {
      "dependsOn": ["^@aiml/parser#build", "^@aiml/shared#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/runtime#typecheck": {
      "dependsOn": ["^@aiml/shared#build", "^@aiml/parser#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/runtime#test": {
      "dependsOn": ["^@aiml/shared#build", "^@aiml/parser#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/parser#typecheck": {
      "dependsOn": ["^@aiml/shared#build", "^unified-aiml#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/unified-aiml#typecheck": {
      "dependsOn": [
        "^micromark-extension-aiml-jsx#build",
        "^micromark-extension-aimljs#build",
        "^mdast-util-aiml#build",
        "^mdast-util-aiml-jsx#build",
        "^unified-aiml#build"
      ],
      "outputs": ["dist/**"]
    },
    "landing-page#build": {
      "outputs": [".source/**", ".next/**"]
    },
    "fireagent-plugin-vscode#build": {
      "dependsOn": ["^@aiml/parser#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/shared#dev": {
      "outputs": ["dist/**"],
      "persistent": true
    },

    "@aiml/runtime#dev": {
      "outputs": ["dist/**"],
      "persistent": true
    },
    "@aiml/parser#dev": {
      "dependsOn": ["^unified-aiml#build"],
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "@aiml/parser#test": {
      "dependsOn": ["^@aiml/shared#build", "^unified-aiml#build"],
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "micromark-extension-aiml-js#test": {
      "dependsOn": ["^micromark-extension-aiml-jsx#build"],
      "outputs": ["dist/**"]
    },
    "mdast-util-aiml-jsx#test": {
      "dependsOn": ["^micromark-extension-aiml-jsx#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/aiml-ui#dev": {
      "persistent": true,
      "outputs": [".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },

    "test": {
      "dependsOn": [
        "micromark-extension-aiml-jsx#build",
        "micromark-extension-aimljs#build",
        "mdast-util-aiml#build",
        "mdast-util-aiml-jsx#build",
        "unified-aiml#build"
      ],
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "e2e": {
      "dependsOn": ["^e2e"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
