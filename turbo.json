{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*"]
    },
    "@fireworks/shared#build": {
      "outputs": ["dist/**"]
    },
    "@fireworks/runtime#build": {
      "dependsOn": ["^@fireworks/shared#build", "^@fireworks/parser#build"],
      "outputs": ["dist/**"]
    },
    "@fireworks/parser#build": {
      "dependsOn": ["^@fireworks/shared#build", "^unified-aiml#build"],
      "outputs": ["dist/**"]
    },
    "@fireworks/unified-aiml#build": {
      "dependsOn": [
        "^micromark-extension-aiml-jsx#build",
        "^mdast-util-aiml#build",
        "^mdast-util-aiml-jsx#build",
        "^unified-aiml#build",
        "^micromark-extension-aimljs#build"
      ],
      "outputs": ["dist/**"]
    },
    "landing-page#build": {
      "outputs": [".source/**", ".next/**"]
    },
    "fireagent-plugin-vscode#build": {
      "dependsOn": ["^@fireworks/parser#build"],
      "outputs": ["dist/**"]
    },
    "@fireworks/shared#dev": {
      "outputs": ["dist/**"],
      "persistent": true
    },

    "@fireworks/runtime#dev": {
      "outputs": ["dist/**"],
      "persistent": true
    },
    "@fireworks/parser#dev": {
      "dependsOn": ["^unified-aiml#build"],
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "@fireworks/parser#test": {
      "dependsOn": ["^unified-aiml#build"],
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "@fireworks/aiml-ui#dev": {
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "cache": false
    }
  }
}
