{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*", "dist/**", ".next/**", ".source/**", "lib/**"]
    },
    "@aiml/shared#build": {
      "outputs": ["dist/**"]
    },
    "@aiml/runtime#build": {
      "dependsOn": ["^@aiml/shared#build", "^@aiml/parser#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/parser#build": {
      "dependsOn": ["^@aiml/shared#build"],
      "outputs": ["dist/**"]
    },

    "landing-page#dev": {
      "outputs": [".source/**", ".next/**"]
    },
    "aiml-ui#dev": {
      "outputs": [".next/**"]
    },
    "aiml-ui#build": {
      "outputs": [".next/**"]
    },
    "@aiml/language-server#typecheck": {
      "dependsOn": ["^@aiml/parser#build", "^@aiml/shared#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/aiml-ui#typecheck": {
      "dependsOn": ["^@aiml/parser#build", "^@aiml/shared#build", "^@aiml/runtime#build"],
      "outputs": ["dist/**"]
    },
    "fireagent-plugin-vscode#typecheck": {
      "dependsOn": ["^@aiml/parser#build", "^@aiml/shared#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/runtime#typecheck": {
      "dependsOn": ["^@aiml/shared#build", "^@aiml/parser#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/runtime#test": {
      "dependsOn": ["^@aiml/shared#build", "^@aiml/parser#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/parser#typecheck": {
      "dependsOn": ["^@aiml/shared#build"],
      "outputs": ["dist/**"]
    },
    "server#typecheck": {
      "dependsOn": ["^@aiml/shared#build", "^@aiml/parser#build", "^@aiml/runtime#build"],
      "outputs": ["dist/**"]
    },

    "landing-page#build": {
      "outputs": [".source/**", ".next/**"]
    },
    "fireagent-plugin-vscode#build": {
      "dependsOn": ["^@aiml/parser#build"],
      "outputs": ["dist/**"]
    },
    "@aiml/shared#dev": {
      "outputs": ["dist/**"],
      "persistent": true
    },

    "@aiml/runtime#dev": {
      "outputs": ["dist/**"],
      "persistent": true
    },
    "@aiml/parser#dev": {
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "@aiml/parser#test": {
      "dependsOn": ["^@aiml/shared#build"],
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "@aiml/aiml-ui#dev": {
      "persistent": true,
      "outputs": [".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },

    "test": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "e2e": {
      "dependsOn": ["^build", "^e2e"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    }
  }
}
