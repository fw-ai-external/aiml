{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*"]
    },
    "@fireworks/shared#build": {
      "outputs": ["dist/**"]
    },

    "@fireworks/runtime#build": {
      "dependsOn": ["^@fireworks/shared#build", "^@fireworks/parser#build"],
      "outputs": ["dist/**"]
    },
    "@fireworks/parser#build": {
      "dependsOn": ["^@fireworks/shared#build"],
      "outputs": ["dist/**"]
    },
    "fireagent-plugin-vscode#build": {
      "dependsOn": ["^@fireworks/parser#build"],
      "outputs": ["dist/**"]
    },
    "@fireworks/shared#dev": {
      "outputs": ["dist/**"],
      "persistent": true
    },

    "@fireworks/runtime#dev": {
      "outputs": ["dist/**"],
      "persistent": true
    },
    "@fireworks/parser#dev": {
      "persistent": true,
      "outputs": ["dist/**"]
    },
    "@fireworks/aiml-ui#dev": {
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "cache": false
    }
  }
}
