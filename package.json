    "claude-task-master": "^1.6.4",
    "concurrently": "^9.1.2",
    "tsup": "^8.4.0",
    "turbo": "latest"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "@mastra/core": "^0.6.0",
    "human-regex": "^2.1.5",
    "mermaid": "^11.6.0",
    "next-themes": "^0.4.6",
    "@anthropic-ai/sdk": "^0.39.0",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
