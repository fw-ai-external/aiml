{
  "name": "aiml-prompting-language",
  "private": true,
  "engines": {
    "bun": ">=1.1.0"
  },
  "packageManager": "bun@1.1.42",
  "scripts": {
    "preinstall": "node -e \"if (!process.env.npm_config_user_agent || !process.env.npm_config_user_agent.includes('bun')) { console.error('\\u001b[31mError: This project uses bun as the package manager. Please use bun install.\\u001b[39m'); process.exit(1); }\"",
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency 11",
    "dev:watch": "turbo run build && bun --watch turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "validate": "bun run build && bun test",
    "list": "node scripts/dev.js list",
    "generate": "node scripts/dev.js generate",
    "parse-prd": "node scripts/dev.js parse-prd",
    "e2e": "turbo run e2e"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.5",
    "@types/lodash": "^4.17.16",
    "claude-task-master": "^1.6.4",
    "concurrently": "^9.1.2",
    "tsup": "^8.4.0",
    "turbo": "^2.5.0"
  },
  "workspaces": ["packages/*", "apps/*"],
  "dependencies": {
    "@mastra/core": "^0.6.0",
    "human-regex": "^2.1.5",
    "mermaid": "^11.6.0",
    "next-themes": "^0.4.6",
    "@anthropic-ai/sdk": "^0.39.0",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "fastmcp": "^1.20.5",
    "figlet": "^1.8.0",
    "fuse.js": "^7.0.0",
    "gradient-string": "^3.0.0",
    "helmet": "^8.1.0",
    "inquirer": "^12.5.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.2.0",
    "openai": "^4.89.0",
    "ora": "^8.2.0"
  },
  "type": "module"
}
