<workflow id="test" initial="idle">
    <state id="idle">
        <onentry>
            <log expr="'Entering idle state'" />
        </onentry>

        <transition event="start" target="running">
            <log expr="'Starting...'" />
        </transition>
    </state>

    <state id="running">
        <onentry>
            <log expr="'Now running'" />
        </onentry>

        <transition event="stop" target="idle">
            <log expr="'Stopping...'" />
        </transition>
    </state>
</workflow>