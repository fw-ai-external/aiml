{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": ".build",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vscode", "bun-types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test", "../../../node_modules", ".build"]
}
