{
  "name": "fireagent-plugin-vscode",
  "displayName": "SCXML Language Support",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattapperson/workflow.git",
    "directory": "apps/vscode-plugin"
  },
  "license": "MIT",
  "description": "SCXML language support including syntax highlighting, validation, and intelligent features",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "activationEvents": ["onLanguage:xml"],
  "main": "./.dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "aiml",
        "aliases": ["Workflow", "workflow"],
        "extensions": [".aiml"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aiml",
        "scopeName": "text.xml.workflow",
        "path": "./syntaxes/scxml.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SCXML Language Server Configuration",
      "properties": {
        "scxml.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "scxml.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "dependencies": {
    "@aiml/shared": "workspace:*",
    "@aiml/parser": "workspace:*",
    "dot-object": "^2.1.5",
    "find-up": "^7.0.0",
    "load-plugin": "^6.0.3",
    "remark-mdx": "^3.1.0",
    "remark-parse": "^11.0.0",
    "remark-retext": "^6.0.0",
    "retext-english": "^5.0.0",
    "ts-morph": "^25.0.1",
    "unified": "^11.0.5",
    "unified-engine": "^11.2.2",
    "unist-util-lsp": "^2.1.0",
    "unist-util-visit": "^5.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "woodpile": "^0.0.6",
    "xmldom": "^0.6.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/dot-object": "^2.1.6",
    "@types/node": "^20.11.17",
    "@types/vscode": "^1.86.0",
    "@types/xmldom": "^0.1.34",
    "@vscode/vsce": "^3.2.2",
    "@xml-tools/constraints": "^1.1.1",
    "@xml-tools/validation": "^1.0.16",
    "biome": "^0.3.3",
    "bun-types": "^1.2.2",
    "changeset": "^0.2.6",
    "esbuild": "^0.25.0",
    "remark": "^15.0.1",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "dev": "echo \"bun esbuild.mjs --watch\"",
    "build": "echo \"bun run check-types && bun run lint && bun esbuild.mjs --production\"",
    "check-types": "tsc --noEmit",
    "lint": "biome check .",
    "watch": "bun esbuild.mjs --watch",
    "test": "echo \"bun test\"",
    "package": "bun run build && vsce package --no-dependencies",
    "test:watch": "bun test --watch",
    "publish:marketplace": "bun run package && vsce publish --no-dependencies && ovsx publish --no-dependencies",
    "publish:marketplace:prerelease": "bun run package && vsce publish --pre-release --no-dependencies && ovsx publish --pre-release --no-dependencies",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "clean": "rm -rf node_modules && rm -rf dist"
  }
}
