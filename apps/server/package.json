{
  "name": "server",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --external playwright-core --target bun",
    "start": "bun run ./dist/index.js",
    "migrate": "npx drizzle-kit push",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "clean": "rm -rf node_modules && rm -rf dist",
    "deploy": "./build-images.sh deploy"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.2",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.7.7",
    "lodash": "^4.17.21",
    "pg": "^8.13.1",
    "postgres": "^3.4.5"
  }
}
