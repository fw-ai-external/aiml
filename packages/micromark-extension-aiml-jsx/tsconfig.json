{
  "compilerOptions": {
    "checkJs": true,
    "customConditions": ["development"],
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["es2022", "DOM"],
    "module": "node16",
    "strict": true,
    "target": "es2022",
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["coverage/", "lib/", "node_modules/", "index.js", "dist/"]
}
