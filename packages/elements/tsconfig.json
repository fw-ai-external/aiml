{
  "extends": "@fireworks/tsconfig/base.json",
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mts",
    "src/**/*.mtsx",
    "src/**/*.json"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "noErrorTruncation": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "ignoreDeprecations": "5.0",
    "skipDefaultLibCheck": true
  }
}
