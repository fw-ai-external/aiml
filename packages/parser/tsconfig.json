{
  "extends": "@fireworks/tsconfig/library.json",
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mts",
    "src/**/*.mtsx",
    "src/**/*.json"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src"
  }
}
