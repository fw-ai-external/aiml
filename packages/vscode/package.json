{
  "name": "vscode-aiml",
  "version": "0.0.4",
  "displayName": "AIML",
  "description": "Language support for AIML",
  "categories": ["Programming Languages"],
  "license": "MIT",
  "publisher": "aiml",
  "repository": {
    "type": "git",
    "url": "https://github.com/fireworks-ai/vscode-aiml"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "main": "./client/out/extension",
  "keywords": ["aiml", "fireworks", "agents", "llms", "llm", "components", "elements", "vscode", "extension"],
  "icon": "assets/aiml.jpg",
  "scripts": {
    "dev": "bun run build --watch",
    "build": "tsc -b",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "vscode:prepublish": "bun run build",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "clean": "rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@hediet/node-reload": "^0.7.3",
    "@hediet/std": "^0.6.0",
    "@types/node": "^22.0.0",
    "@types/vscode": "1.96.0",
    "@volar/language-server": "~2.4.0",
    "@volar/vscode": "~2.4.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.24.0",
    "ovsx": "^0.10.0"
  },
  "dependencies": {
    "@aiml/shared": "workspace:*",
    "@aiml/parser": "workspace:*"
  },
  "galleryBanner": {
    "color": "#00bc7d",
    "theme": "light"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "AIML Language Server configuration",
      "properties": {
        "aiml.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "aiml.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "aiml.enableCodeLens": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens for AIML workflows."
        },
        "aiml.enableHover": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable hover information for AIML elements."
        }
      }
    },
    "languages": [
      {
        "id": "aiml",
        "aliases": ["AIML"],
        "extensions": [".aiml"],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./assets/file-icon.svg",
          "light": "./assets/file-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "aiml",
        "scopeName": "source.aiml",
        "path": "./syntaxes/aiml.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.json": "json",
          "meta.embedded.python": "python",
          "meta.embedded.javascript": "javascript",
          "meta.embedded.yaml": "yaml"
        }
      }
    ],
    "snippets": [
      {
        "language": "aiml",
        "path": "./snippets/aiml.json"
      }
    ]
  }
}
