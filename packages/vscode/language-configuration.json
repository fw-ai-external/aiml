{
  "comments": {
    "blockComment": ["{/*", "*/}"],
    "lineComment": "//"
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "brackets": [["{", "}"], ["[", "]"], ["(", ")"], ["<", ">"]],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["string"]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": ["string"]
    },
    {
      "open": "<",
      "close": ">",
      "notIn": ["string"]
    },
    {
      "open": "{/*",
      "close": "*/}",
      "notIn": ["string"]
    },
    {
      "open": "<!--",
      "close": "-->",
      "notIn": ["string"]
    }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<", ">"],
    ["`", "`"],
    ["_", "_"],
    ["*", "*"]
  ],
  "folding": {
    "offSide": true,
    "markers": {
      "start": "^\\s*\\{/\\*\\s*#?region\\b.*\\*/\\}",
      "end": "^\\s*\\{/\\*\\s*#?endregion\\b.*\\*/\\}"
    }
  },
  "onEnterRules": [
    {
      "beforeText": "<([_:\\w][_:\\w-.\\d]*)([^/>]*(?!/)>)[^<]*$",
      "afterText": "^\\s*</([_:\\w][_:\\w-.\\d]*)\\s*>",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
