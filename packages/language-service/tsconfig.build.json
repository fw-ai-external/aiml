{
  "include": ["lib"],
  "exclude": ["**/coverage/**"],
  "compilerOptions": {
    "checkJs": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "lib": ["es2022"],
    "module": "node16",
    "moduleDetection": "force",
    "outDir": "types",
    "rootDir": "lib",
    "strict": true,
    "stripInternal": true,
    "target": "es2022",
    "types": ["node"]
  }
}
