{
  "exclude": ["lib", "**/coverage/**"],
  "references": [{"path": "./tsconfig.build.json"}],
  "compilerOptions": {
    "noEmit": true,
    "checkJs": true,
    "composite": true,
    "declarationMap": true,
    "lib": ["es2022"],
    "module": "node16",
    "moduleDetection": "force",
    "strict": true,
    "stripInternal": true,
    "target": "es2022",
    "types": ["node"]
  }
}
